<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:TimeManager.ViewModel;assembly=TimeManager"
             x:Class="TimeManager.HistoryToday" Title="History Today" BackgroundColor="#FFFFFF">
  <ContentPage.BindingContext>
    <viewModel:HistoryTodayViewModel />
  </ContentPage.BindingContext>
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="labelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="VerticalOptions" Value="Center" />
      </Style>
      <DataTemplate x:Key="TimeLineTemplate">
        <ViewCell>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width=".2*"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="{Binding ActiveText}" Style="{StaticResource labelStyle}" />
            <Label Grid.Column="1" Text="{Binding Time}" Style="{StaticResource labelStyle}" />
          </Grid>
        </ViewCell>
      </DataTemplate>
    </ResourceDictionary>
  </ContentPage.Resources>
  <Grid>
    <ListView ItemsSource="{Binding Session.TimeLine}" ItemTemplate="{StaticResource TimeLineTemplate}"/>
  </Grid>
</ContentPage>